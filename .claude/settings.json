{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(cargo build:*)",
      "Bash(cargo test:*)",
      "Bash(cargo clippy:*)",
      "Bash(cargo fmt:*)",
      "Bash(cargo run:*)",
      "Bash(cargo check:*)",
      "Bash(cargo doc:*)",
      "Bash(cargo clean:*)",
      "Bash(cargo tree:*)",
      "Bash(cargo update:*)",
      "Bash(rustup:*)",
      "Bash(gh pr view:*)",
      "Bash(gh pr list:*)",
      "Bash(gh pr diff:*)",
      "Bash(gh pr create:*)",
      "Bash(gh pr checks:*)",
      "Bash(gh issue list:*)",
      "Bash(gh issue view:*)",
      "Bash(gh repo view:*)",
      "Bash(gh status)",
      "Bash(git status)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(git branch:*)",
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git checkout:*)",
      "Bash(git stash:*)",
      "Bash(git pull:*)",
      "Bash(git push:*)",
      "Bash(git worktree:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(ls:*)",
      "Bash(pwd)",
      "Bash(echo:*)",
      "Bash(which:*)",
      "Bash(head:*)",
      "Bash(tail:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(touch:*)",
      "Bash(cp:*)",
      "Bash(mv:*)",
      "Read",
      "Write",
      "Edit",
      "WebSearch"
    ],
    "deny": [
      "Bash(rm -rf:*)",
      "Bash(rm -r:*)",
      "Bash(sudo:*)",
      "Bash(curl:*)",
      "Bash(wget:*)",
      "Bash(cargo publish:*)",
      "Bash(git push --force:*)",
      "Bash(git push -f:*)",
      "Read(./.env*)",
      "Read(.env)",
      "Read(.env.*)",
      "Read(./secrets/**)",
      "Read(./**/.env*)",
      "Read(**/.aws/**)",
      "Read(**/.ssh/**)",
      "Read(*.pem)",
      "Read(*.key)",
      "Read(*.crt)",
      "Write(./.env*)",
      "Write(.env)",
      "Write(.env.*)",
      "Write(Cargo.lock)",
      "Write(*.pem)",
      "Write(*.key)",
      "Write(*.crt)",
      "Edit(./.env*)",
      "Edit(Cargo.lock)"
    ],
    "ask": [
      "Bash(cargo add:*)",
      "Bash(cargo remove:*)",
      "Bash(git merge:*)",
      "Bash(git rebase:*)",
      "Bash(gh pr merge:*)",
      "Bash(gh auth:*)",
      "WebFetch"
    ],
    "defaultMode": "acceptEdits"
  },
  "env": {
    "RUST_BACKTRACE": "1"
  }
}
