#!/usr/bin/env bash
# Common utility functions for bin scripts

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[0;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Track success/failure counts
SUCCESS_COUNT=0
FAILURE_COUNT=0

# Print a header
function print_header {
    echo ""
    echo -e "${BLUE}=== $1 ===${NC}"
    echo ""
}

# Check result and update counters
function check_result {
    local operation=$1
    if [ $? -eq 0 ]; then
        echo -e "${GREEN}✓ $operation succeeded${NC}"
        ((SUCCESS_COUNT++))
    else
        echo -e "${RED}✗ $operation failed${NC}"
        ((FAILURE_COUNT++))
    fi
}

# Print summary
function print_summary {
    local success_msg=$1
    local failure_msg=$2
    echo ""
    if [ $FAILURE_COUNT -eq 0 ]; then
        echo -e "${GREEN}$success_msg${NC}"
    else
        echo -e "${RED}$FAILURE_COUNT $failure_msg${NC}"
    fi
}

# Check if a command exists
function command_exists {
    command -v "$1" &>/dev/null
}
